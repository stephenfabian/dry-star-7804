<h2> Doctor Information </h2>
<p> Name: <%= @doctor.name %> </p>
<p> Specialty: <%= @doctor.specialty %> </p>
<p> University: <%= @doctor.university %> </p>
<p> Hospital: <%= @doctor.hospital.name %> </p>

<h2> Patient Names </h2>
<% @doctor.patients.each do |patient| %>
  <% if patient.enabled == true %>
    <p> <%= patient.name %> </p>
    <p><%= link_to "Remove #{patient.name} from #{@doctor.name}'s caseload", doctor_patient_path(@doctor, patient), method: :patch %></p>
  <% end %>
 <% end %>

